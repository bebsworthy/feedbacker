{
  "name": "feedbacker-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Feedbacker - React component-level feedback library",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@feedbacker/demo",
    "build": "npm run build --workspace=feedbacker-react",
    "build:demo": "npm run build --workspace=@feedbacker/demo",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=feedbacker-react",
    "test:e2e:ui": "npm run test:e2e:ui --workspace=feedbacker-react",
    "test:e2e:debug": "npm run test:e2e:debug --workspace=feedbacker-react",
    "test:e2e:simple": "npm run test:e2e:simple --workspace=feedbacker-react",
    "test:e2e:simple:headless": "npm run test:e2e:simple:headless --workspace=feedbacker-react",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "terser": "^5.43.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
